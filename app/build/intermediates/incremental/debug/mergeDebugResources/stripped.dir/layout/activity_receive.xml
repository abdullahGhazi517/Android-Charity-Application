<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testbackground"
    tools:context=".Receive">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/DarkGreen">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Recieve your Donations"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:fontFamily="@font/bold" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:contentDescription="Image Receive"
            android:src="@drawable/img_5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_receiver_name_receivexml"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="75dp"/>

        <EditText
            android:id="@+id/editTextName_R"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="15dp"
            android:hint="Enter Name"
            android:inputType="text"
            android:maxLength="40"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:background="@drawable/custom_input"
            android:textColorHint="#78909C"
            android:autofillHints=""
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your CNIC"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="40dp"/>

        <EditText
            android:id="@+id/editTextCNIC_R"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="CNIC"
            android:inputType="number"
            android:maxLength="13"
            android:minHeight="48dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:background="@drawable/custom_input"
            android:textColorHint="#78909C"
            android:autofillHints=""
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your phone number"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="40dp"/>

        <EditText
            android:id="@+id/editTextPhoneNumber_R"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Phone Number"
            android:inputType="phone"
            android:maxLength="15"
            android:minHeight="48dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:background="@drawable/custom_input"
            android:textColorHint="#78909C"
            android:autofillHints=""
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your address"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="40dp"/>

        <EditText
            android:id="@+id/editTextAddress_R"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Address"
            android:inputType="textLongMessage"
            android:maxLength="70"
            android:minHeight="48dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:background="@drawable/custom_input"
            android:textColorHint="#78909C"
            android:autofillHints=""
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter number of family members"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/editTextFamilyMembers_R"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Family Members"
            android:inputType="number"
            android:maxLength="2"
            android:minHeight="48dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:background="@drawable/custom_input"
            android:textColorHint="#78909C"
            android:autofillHints=""
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your monthly income"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/editTextMonthlyIncome_R"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Monthly Income"
            android:inputType="number"
            android:maxLength="7"
            android:minHeight="48dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:background="@drawable/custom_input"
            android:textColorHint="#78909C"
            android:autofillHints=""
            android:padding="5dp"/>

        <Button
            android:id="@+id/buttonUploadStampPaper"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableEnd="@drawable/file"
            android:background="@color/LightGreen"
            android:text="Upload Stamp Paper and FRC"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonRecv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@drawable/button_disabled"
            android:text="@string/receive_btn"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:enabled="false" />

    </LinearLayout>

</ScrollView>
